@model VaccineRegistration.Models.VaccineRegistreeModel
@{
    ViewData["Title"] = "Register Page";
}
<div class="row text-center">
    <div class="col-md-6 mx-auto shadow-sm p-3 mb-5 bg-white rounded">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5>Vaccine Registration</h5>
            </div>
            <p class="text-secondary font-weight-bold mt-4">Page 2 of 2</p>
            <div class="card-body px-5">
                <form asp-action="Register">

                    <div class="form-group row">
                        <label class="control-label font-weight-bold text-left">Do you have a history of severe allergies such as shortness of breath, swelling, urticaria all over the body, or other severe reactions to vaccines?</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="allergies" id="allergies-yes" value="yes" checked>
                            <label class="form-check-label" for="exampleRadios1">
                                Yes
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="allergies" id="allergies-no" value="no">
                            <label class="form-check-label" for="exampleRadios2">
                                No
                            </label>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="control-label font-weight-bold text-left">Do you have an autoimmune disease, such as lupus?</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="allergies" id="allergies-yes" value="yes">
                            <label class="form-check-label" for="exampleRadios1">
                                Yes
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="allergies" id="allergies-no" value="no">
                            <label class="form-check-label" for="exampleRadios2">
                                No
                            </label>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="control-label font-weight-bold text-left">
                            Are you on medication for blood clotting disorders, blood disorders,
                            immune deficiencies, and receiving blood products/transfusions?
                        </label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="allergies" id="allergies-yes" value="yes" checked>
                            <label class="form-check-label" for="exampleRadios1">
                                Yes
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="allergies" id="allergies-no" value="no">
                            <label class="form-check-label" for="exampleRadios2">
                                No
                            </label>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="control-label font-weight-bold text-left">Are you currently receiving immunosuppressant treatment such as corticosteroids and chemotherapy?</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="allergies" id="allergies-yes" value="yes">
                            <label class="form-check-label" for="exampleRadios1">
                                Yes
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="allergies" id="allergies-no" value="no">
                            <label class="form-check-label" for="exampleRadios2">
                                No
                            </label>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="control-label font-weight-bold text-left">
                            Do you have severe heart disease or asthma in a state of shortness of
                            breath?
                        </label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="allergies" id="allergies-yes" value="yes" checked>
                            <label class="form-check-label" for="exampleRadios1">
                                Yes
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="allergies" id="allergies-no" value="no">
                            <label class="form-check-label" for="exampleRadios2">
                                No
                            </label>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="control-label font-weight-bold text-left">Do you have a history of diabetes?</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="allergies" id="allergies-yes" value="yes" checked>
                            <label class="form-check-label" for="exampleRadios1">
                                Yes
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="allergies" id="allergies-no" value="no">
                            <label class="form-check-label" for="exampleRadios2">
                                No
                            </label>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="control-label font-weight-bold text-left">Do you have a history of hypertension?</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="allergies" id="allergies-yes" value="yes" checked>
                            <label class="form-check-label" for="exampleRadios1">
                                Yes
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="allergies" id="allergies-no" value="no">
                            <label class="form-check-label" for="exampleRadios2">
                                No
                            </label>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="control-label font-weight-bold text-left">Have you ever been confirmed to have COVID-19?</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="allergies" id="allergies-yes" value="yes" checked>
                            <label class="form-check-label" for="exampleRadios1">
                                Yes
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="allergies" id="allergies-no" value="no">
                            <label class="form-check-label" for="exampleRadios2">
                                No
                            </label>
                        </div>
                    </div>

                    

                    <div class="form-group d-flex justify-content-end">
                        <input type="submit" value="Register" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>